<h1>Program Index</h1>
<p>These are all the programs you have to chose from!</p>

<ul class="index">
  <% @programs.each do |program| %>
    <li class="js-accordion index-item">
      <span class="js-trigger index-item-title"><%= program.title %></span>
      <div class="index-item-controls">
        <%= link_to "Details", program_path(program), class: "btn" %>
        <%= link_to "Watch", '#', class: "btn" %>
      </div>
      <ul class="js-panel">
        <% program.parts.each do |part| %>
          <li class="index-item-part">
            <%= "#{part.title} (#{pluralize(part.episodes.count, 'episode')})" %>
            <ul>
              <li>
                <% part.episodes.each do |episode| %>
                  <span><%= episode.title %></span>
                <% end %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>

<script type="text/javascript">
  accordion = new Accordion();
</script>